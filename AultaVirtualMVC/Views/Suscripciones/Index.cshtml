@model IEnumerable<AulaVirtualMVC.Models.Suscripcion>

@{
    ViewData["Title"] = "Index";
    
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorPago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedioPago)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Curso.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedioPago.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SuscripcionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SuscripcionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SuscripcionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
